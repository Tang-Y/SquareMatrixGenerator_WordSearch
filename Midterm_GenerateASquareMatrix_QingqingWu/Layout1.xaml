<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Midterm_GenerateASquareMatrix_QingqingWu">

    <LinearGradientBrush x:Key="buttonStyleGradient" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF307461" Offset="0" />
        <GradientStop Color="#FF699186" Offset="1" />
    </LinearGradientBrush>
    <Style x:Key="btnStyle">
        <Setter Property="Button.Margin" Value="5,10" />
        <Setter Property="Button.Background" Value="{StaticResource buttonStyleGradient}" />
        <Setter Property="Button.Foreground" Value="Wheat" />
    </Style>
    <Style x:Key="tbStyle">
        <Setter Property="TextBlock.Foreground" Value="#FF307461" />
        <Setter Property="TextBlock.FontWeight" Value="Bold" />
        <Setter Property="TextBlock.FontStyle" Value="Italic" />
    </Style>
    <Style x:Key="gridStyle">
        <Setter Property="Grid.Background" Value="#FF5B897C" />
    </Style>
</ResourceDictionary>